# name: test/sql/erpl_odata_read_secret.test
# description: test erpl_odata_read_secret extension
# group: [erpl_odata]

require erpl_web

# Skip this test in CI unless ERPL_SAP_BASE_URL is provided
require-env ERPL_SAP_BASE_URL

require-env ERPL_SAP_PASSWORD

# Unauthorized without secret
statement error
SELECT * FROM odata_read('${ERPL_SAP_BASE_URL}/sap/opu/odata4/dmo/ui_travel_d_d_o4/srvd/dmo/ui_travel_d_d/0001/Airline');
----

statement ok
CREATE SECRET (
	TYPE http_basic,
	USERNAME 'DEVELOPER',
	PASSWORD '${ERPL_SAP_PASSWORD}',
    SCOPE '${ERPL_SAP_BASE_URL}'
);

# Can query with secret
query I
SELECT COUNT(*) FROM odata_read('${ERPL_SAP_BASE_URL}/sap/opu/odata4/dmo/ui_travel_d_d_o4/srvd/dmo/ui_travel_d_d/0001/Airline');
----
16

# Can query data from odata entity set table
query I
SELECT AirlineID FROM odata_read('${ERPL_SAP_BASE_URL}/sap/opu/odata4/dmo/ui_travel_d_d_o4/srvd/dmo/ui_travel_d_d/0001/Airline') ORDER BY AirlineID LIMIT 1;
----
AA
