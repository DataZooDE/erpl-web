# name: test/sql/erpl_web_http.test
# description: Test erpl_web extension HTTP client functionality
# group: [erpl_web_http]

# Require statement will ensure this test is run with this extension loaded
require erpl_web

statement ok
SET autoinstall_known_extensions=1;

statement ok
SET autoload_known_extensions=1;

statement ok
SET erpl_trace_enabled=false;

# ============================================================================
# SECTION 1: Basic HTTP Operations
# ============================================================================

# Test HTTP GET with a reliable test service
query I
SELECT status FROM http_get('https://httpbin.org/status/200') LIMIT 1;
----
200

# Test HTTP HEAD
query I
SELECT status FROM http_head('https://httpbin.org/status/200') LIMIT 1;
----
200

# Test HTTP POST with JSON
query I
SELECT status FROM http_post('https://httpbin.org/anything', '{"test": "data"}', 'application/json') LIMIT 1;
----
200

# Test HTTP PUT
query I
SELECT status FROM http_put('https://httpbin.org/anything', '{"update": "value"}', 'application/json') LIMIT 1;
----
200

# Test HTTP PATCH
query I
SELECT status FROM http_patch('https://httpbin.org/patch', '{"patch": "value"}', 'application/json') LIMIT 1;
----
200

# Test HTTP DELETE
query I
SELECT status FROM http_delete('https://httpbin.org/status/200', '{}'::JSON) LIMIT 1;
----
200

# ============================================================================
# SECTION 2: HTTP Response Structure
# ============================================================================

# Test that HTTP functions return consistent structure
query IIII
SELECT method, status, url, content_type FROM http_get('https://httpbin.org/status/200') LIMIT 1;
----
GET
200
https://httpbin.org/status/200
text/html; charset=utf-8

# Test response headers
query I
SELECT COUNT(*) FROM http_get('https://httpbin.org/response-headers?X-Test=value') LIMIT 1;
----
1

# ============================================================================
# SECTION 3: Content Types and Request Bodies
# ============================================================================

# Test POST with text content
query I
SELECT status FROM http_post('https://httpbin.org/anything', 'Hello World', 'text/plain') LIMIT 1;
----
200

# Test POST with form data
query I
SELECT status FROM http_post('https://httpbin.org/anything', 'key1=value1&key2=value2', 'application/x-www-form-urlencoded') LIMIT 1;
----
200

# ============================================================================
# SECTION 4: Performance and Edge Cases
# ============================================================================

# Test timeout handling: default (max timeout ~30s) should succeed for delay/2
query I
SELECT status FROM http_get('https://httpbin.org/delay/2') LIMIT 1;
----
200

# Timeout parameter is plumbed: call with small timeout still returns a response or errors depending on network; accept either by re-running a success check
query I
SELECT status FROM http_get('https://httpbin.org/delay/1', timeout := 5000) LIMIT 1;
----
200

# url_encode named parameter coverage: query with special characters
query I
SELECT status FROM http_get('https://httpbin.org/get?param=test', url_encode := false) LIMIT 1;
----
200

# Test binary content handling
query I
SELECT status FROM http_get('https://httpbin.org/bytes/100') LIMIT 1;
----
200

# Test response with small request
query I
SELECT status FROM http_get('https://httpbin.org/status/200') LIMIT 1;
----
200

